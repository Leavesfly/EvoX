# EvoX 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ===========================================
# LLM 提供商配置
# ===========================================

# OpenAI 配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o-mini

# 阿里云通义千问配置 (可选)
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_MODEL=qwen-plus

# LiteLLM 配置 (可选)
LITELLM_API_KEY=your-litellm-api-key-here
LITELLM_BASE_URL=https://api.litellm.ai/v1

# ===========================================
# EvoX 框架配置
# ===========================================

# LLM 提供商选择: openai, dashscope, litellm
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30000

# 重试配置
LLM_RETRY_MAX_ATTEMPTS=3
LLM_RETRY_INITIAL_DELAY=1000
LLM_RETRY_MAX_DELAY=10000

# ===========================================
# Agent 配置
# ===========================================

AGENT_TIMEOUT=60000
AGENT_MAX_CONCURRENT=10

# ===========================================
# Memory 配置
# ===========================================

# 短期记忆
MEMORY_SHORT_CAPACITY=100
MEMORY_SHORT_WINDOW=10

# 长期记忆
MEMORY_LONG_ENABLED=true
MEMORY_LONG_STORAGE=in-memory

# ===========================================
# Storage 配置
# ===========================================

# 存储类型: in-memory, h2, postgresql
STORAGE_TYPE=in-memory

# 向量存储
VECTOR_ENABLED=false
VECTOR_PROVIDER=in-memory
VECTOR_DIMENSION=1536

# ===========================================
# Workflow 配置
# ===========================================

WORKFLOW_MAX_DEPTH=10
WORKFLOW_TIMEOUT=300000
WORKFLOW_PARALLEL=true

# ===========================================
# Tools 配置
# ===========================================

TOOLS_ENABLED=true
TOOLS_TIMEOUT=30000
TOOLS_MAX_RETRIES=3

# ===========================================
# 日志配置
# ===========================================

# 日志级别: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO
LOGGING_LEVEL_EVOX=DEBUG
LOGGING_LEVEL_SPRING_AI=INFO

# 日志文件
LOGGING_FILE=logs/evox.log
LOGGING_MAX_SIZE=10MB
LOGGING_MAX_HISTORY=30

# ===========================================
# Benchmark 配置 (仅用于 evox-benchmark)
# ===========================================

BENCHMARK_WARMUP=3
BENCHMARK_ITERATIONS=10
BENCHMARK_TIMEOUT=300000
BENCHMARK_THREADS=1
BENCHMARK_OUTPUT=./benchmark-results

# ===========================================
# Spring 配置
# ===========================================

# 激活的环境配置: dev, test, prod
SPRING_PROFILES_ACTIVE=dev
